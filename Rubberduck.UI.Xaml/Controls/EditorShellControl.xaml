<UserControl x:Class="Rubberduck.UI.Xaml.Controls.EditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Rubberduck.UI.Abstract;assembly=Rubberduck.UI"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" 
             xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance {x:Type vm:IEditorControlViewModel}, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        
        <avalonDock:DockingManager>
            <avalonDock:LayoutRoot>
                <avalonDock:LayoutRoot.LeftSide>
                    <avalonDock:LayoutAnchorSide>
                        <avalonDock:LayoutAnchorGroup>
                            <avalonDock:LayoutAnchorable Title="Code Explorer" 
                                                         IsVisible="False"
                                                         CanClose="True"
                                                         CanHide="True" 
                                                         CanAutoHide="True" 
                                                         CanFloat="True" 
                                                         AutoHideMinWidth="200">
                                <ContentControl>
                                    <!--TODO import Code Explorer control here -->
                                </ContentControl>
                            </avalonDock:LayoutAnchorable>
                        </avalonDock:LayoutAnchorGroup>
                    </avalonDock:LayoutAnchorSide>
                </avalonDock:LayoutRoot.LeftSide>
                <LayoutRoot.BottomSide>
                    <avalonDock:LayoutAnchorSide>
                        <avalonDock:LayoutAnchorGroup>
                            <avalonDock:LayoutAnchorable Title="Search Results"
                                                         IsVisible="False"
                                                         CanClose="True"
                                                         CanHide="True"
                                                         CanAutoHide="True"
                                                         CanFloat="True"
                                                         AutoHideMinHeight="200">
                                <ContentControl>
                                    <!-- TODO import Search Results control here -->
                                </ContentControl> 
                            </avalonDock:LayoutAnchorable>
                        </avalonDock:LayoutAnchorGroup>
                    </avalonDock:LayoutAnchorSide>
                </LayoutRoot.BottomSide>
                <avalonDock:LayoutRoot.RightSide>
                    <avalonDock:LayoutAnchorSide>
                        <avalonDock:LayoutAnchorGroup>
                            <avalonDock:LayoutAnchorable Title="Rubberduck Editor Panel"
                                              IsVisible="True"
                                              CanClose="False"
                                              CanHide="False"
                                              CanAutoHide="False"
                                              CanFloat="False">
                                <ContentControl>
                                    <!-- TODO tear-tabs? -->
                                    <avalonedit:TextEditor FontFamily="{Binding FontFamily}" 
                                                           FontSize="{Binding FontSize}" 
                                                           ShowLineNumbers="{Binding ShowLineNumbers}"
                                                           PreviewKeyDown="TextEditor_PreviewKeyDown"
                                                           SyntaxHighlighting="VB">

                                    </avalonedit:TextEditor>
                                </ContentControl>
                            </avalonDock:LayoutAnchorable>
                        </avalonDock:LayoutAnchorGroup>
                    </avalonDock:LayoutAnchorSide>
                </avalonDock:LayoutRoot.RightSide>
            </avalonDock:LayoutRoot>
        </avalonDock:DockingManager>
    </DockPanel>
</UserControl>
