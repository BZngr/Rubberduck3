<Window x:Class="Rubberduck.UI.Shell.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rubberduck.UI.Shell" 
        xmlns:windows="clr-namespace:Rubberduck.UI.Windows"
        xmlns:statusbar="clr-namespace:Rubberduck.UI.Shell.StatusBar" 
        xmlns:dockablz="http://dragablz.net/winfx/xaml/dockablz"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz" 
        d:DataContext="{d:DesignInstance Type=local:IShellWindowViewModel}"
        mc:Ignorable="d"
        ContentRendered="OnContentRendered" 
        Style="{DynamicResource ThemedWindowStyle}"
        Title="Rubberduck Editor"
        ShowInTaskbar="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Rubberduck.UI;component/Styles/DefaultStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <dragablz:InterTabController x:Key="InterTabController" x:Shared="False" InterTabClient="{Binding InterTabClient}" Partition="toolwindows" />

            <CollectionViewSource x:Key="DocumentsSource" Source="{Binding Documents}" />
            <CollectionViewSource x:Key="LeftPanelToolsSource" Source="{Binding ToolWindows}" Filter="LeftPanelToolsSource_Filter" />
            <CollectionViewSource x:Key="RightPanelToolsSource" Source="{Binding ToolWindows}" Filter="RightPanelToolsSource_Filter" />
            <CollectionViewSource x:Key="BottomPanelToolsSource" Source="{Binding ToolWindows}" Filter="BottomPanelToolsSource_Filter" />

            <DataTemplate x:Key="TabHeaderTemplate" DataType="windows:ITabViewModel">
                <ContentControl Content="{Binding Header}" />
            </DataTemplate>

            <DataTemplate x:Key="TabItemTemplate" DataType="windows:ITabViewModel">
                <ContentControl Content="{Binding Content}" />
            </DataTemplate>

            <Style x:Key="TabControlStyle" TargetType="dragablz:TabablzControl">
                <Style.Setters>
                    <Setter Property="ShowDefaultAddButton" Value="False" />
                    <Setter Property="ShowDefaultCloseButton" Value="True" />
                </Style.Setters>
            </Style>
            <Style x:Key="BaseLayoutStyle" TargetType="dockablz:Layout">
                <Style.Setters>
                    <Setter Property="IsFloatDropZoneEnabled" Value="False" />
                </Style.Setters>
            </Style>

        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource ThemeBackgroundColorBrush}"
          ClipToBounds="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="200" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <local:DuckyBackgroundControl Grid.RowSpan="3" />

        <local:MenuBarControl x:Name="MenuBar" Grid.Row="0" />

        <DockPanel Grid.Row="1">
            <dockablz:Layout Name="LeftPane" Partition="toolwindows" DockPanel.Dock="Left">
                <dockablz:Layout.BranchTemplate>
                    <DataTemplate>
                        <dragablz:TabablzControl InterTabController="{DynamicResource InterTabController}"
                                                 ItemsSource="{Binding View, Source={StaticResource LeftPanelToolsSource}}"
                                                 ContentTemplate="{StaticResource TabItemTemplate}"
                                                 HeaderItemTemplate="{StaticResource TabHeaderTemplate}"
                                                 TabStripPlacement="Bottom" 
                                                 Background="{DynamicResource ThemeBackgroundColorBrush}" />
                    </DataTemplate>
                </dockablz:Layout.BranchTemplate>
                <dragablz:TabablzControl x:Name="LeftPaneToolTabs" TabStripPlacement="Bottom"
                                         ItemsSource="{Binding View, Source={StaticResource LeftPanelToolsSource}}"
                                         ContentTemplate="{StaticResource TabItemTemplate}"
                                         HeaderItemTemplate="{StaticResource TabHeaderTemplate}"
                                         InterTabController="{DynamicResource InterTabController}"
                                         Background="{DynamicResource ThemeBackgroundColorBrush}" />
            </dockablz:Layout>
            <dockablz:Layout Name="RightPane" Partition="toolwindows" DockPanel.Dock="Right">
                <dockablz:Layout.BranchTemplate>
                    <DataTemplate>
                        <dragablz:TabablzControl InterTabController="{DynamicResource InterTabController}"
                                                 ItemsSource="{Binding View, Source={StaticResource RightPanelToolsSource}}"
                                                 ContentTemplate="{StaticResource TabItemTemplate}"
                                                 HeaderItemTemplate="{StaticResource TabHeaderTemplate}"
                                                 TabStripPlacement="Bottom" Background="{DynamicResource ThemeBackgroundColorBrush}" />
                    </DataTemplate>
                </dockablz:Layout.BranchTemplate>
                <dragablz:TabablzControl x:Name="RightPaneToolTabs" TabStripPlacement="Bottom"
                                         ItemsSource="{Binding View, Source={StaticResource RightPanelToolsSource}}"
                                         ContentTemplate="{StaticResource TabItemTemplate}"
                                         HeaderItemTemplate="{StaticResource TabHeaderTemplate}"
                                         InterTabController="{DynamicResource InterTabController}"
                                         Background="{DynamicResource ThemeBackgroundColorBrush}" />
            </dockablz:Layout>
            <dockablz:Layout Name="BottomPane" Partition="toolwindows" DockPanel.Dock="Bottom">
                <dockablz:Layout.BranchTemplate>
                    <DataTemplate>
                        <dragablz:TabablzControl InterTabController="{DynamicResource InterTabController}"
                                                 ItemsSource="{Binding View, Source={StaticResource BottomPanelToolsSource}}"
                                                 ContentTemplate="{StaticResource TabItemTemplate}"
                                                 HeaderItemTemplate="{StaticResource TabHeaderTemplate}"
                                                 TabStripPlacement="Bottom" Background="{DynamicResource ThemeBackgroundColorBrush}" />
                    </DataTemplate>
                </dockablz:Layout.BranchTemplate>
                <dragablz:TabablzControl x:Name="BottomPaneToolTabs" TabStripPlacement="Bottom" 
                                         ItemsSource="{Binding View, Source={StaticResource BottomPanelToolsSource}}"
                                         ContentTemplate="{StaticResource TabItemTemplate}"
                                         HeaderItemTemplate="{StaticResource TabHeaderTemplate}"
                                         InterTabController="{DynamicResource InterTabController}"
                                         Background="{DynamicResource ThemeBackgroundColorBrush}" />
            </dockablz:Layout>

            <dockablz:Layout Name="DocumentPane" Partition="documents" DockPanel.Dock="Top">
                <dockablz:Layout.BranchTemplate>
                    <DataTemplate>
                        <dragablz:TabablzControl InterTabController="{DynamicResource InterTabController}"
                                                 ItemsSource="{Binding View, Source={StaticResource DocumentsSource}}"
                                                 ContentTemplate="{StaticResource TabItemTemplate}"
                                                 HeaderItemTemplate="{StaticResource TabHeaderTemplate}"
                                                 TabStripPlacement="Top" Background="{DynamicResource ThemeBackgroundColorBrush}" />
                    </DataTemplate>
                </dockablz:Layout.BranchTemplate>
                <dragablz:TabablzControl x:Name="DocumentPaneTabs" TabStripPlacement="Top"
                                         ItemsSource="{Binding View, Source={StaticResource DocumentsSource}}"
                                         ContentTemplate="{StaticResource TabItemTemplate}"
                                         HeaderItemTemplate="{StaticResource TabHeaderTemplate}"
                                         InterTabController="{DynamicResource InterTabController}"
                                         Background="{DynamicResource ThemeBackgroundColorBrush}" />
            </dockablz:Layout>
        </DockPanel>
        
        <statusbar:StatusBarControl x:Name="StatusBar" Grid.Row="2" />

        <Thumb Grid.Row="2" HorizontalAlignment="Right" IsEnabled="True" IsHitTestVisible="True" WindowChrome.IsHitTestVisibleInChrome="True"
               DragDelta="OnResizeGripDragDelta" Cursor="SizeNWSE">
            <Thumb.Template>
                <ControlTemplate>
                    <ResizeGrip Margin="0">
                    </ResizeGrip>
                </ControlTemplate>
            </Thumb.Template>
        </Thumb>
    </Grid>
</Window>
